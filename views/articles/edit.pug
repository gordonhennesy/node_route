html
  head
    title= title 
  body
    h1= message
    h2= artid
    form(action=`/articles/${artid}` method="POST")
        label(for='title') Title
        input#title(type='text' 
          name='title'
          value= article.title
        )
        br
        label(for='text') Article Text
        input#text(
          type="textarea" 
          name="text" 
          value= article.text 
        )
        br
        input(type="submit")
